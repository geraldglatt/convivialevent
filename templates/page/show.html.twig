{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
<section1 class="section1">
    <div class="container-fluid" id="bgS1Page">
        <div class="row">
            <div class="col text-center mt-5">
                <h1 class="colorTxtS1Page">{{ page.title | striptags | raw }}</h1>
            </div>
        </div>
    </div>
</section1>
<section2 class="wrapper">
    <div class="container">
        <div class="row">
            <card class="col mb-4 mt-5 pb-4 text-center">
                <img class="card-img-top" style="max-width: 700px" src="{{ asset('build/images/' ~ page.image) | imagine_filter('my_thumb') }}" alt="photo convivialevent">
                <div class="card-body">
                    <p class="card-text mt-5">{{ page.content | striptags | raw }}</p>
                </div>
            </card>
        </div>
    </div>
</section2>
<section3 class="section4">
    <div class="container-fluid" id="">
        <div class="row">
            <div class="col-12 text-center">
                <h3>Pour connaitre nos options et détails</br><span class="spanPageS4">Télécharger nos brochures :</span></h3>
            </div>
        </div>
    </div>
</section3>
<section4 class="section5">
    <div class="container-fluid" id="">
        <div class="row">
            {% for pdf in pagePdf %}
            <div class="col text-center" id="divButtonS5Page">
                <a id="buttonS5Page" href="#" role="button">{{ pdf.title }}</a>   
            </div> 
            {% endfor %}
            </div>
        </div>
    </section4>
</section4>
<section5 class="container-fluid" id="bgS1Page">
    <div class="row">
        <div class="col text-center">
            <h2 class="colorTxtS1Page">Notre Galerie</h2>
        </div>
        <div class="row">
            <div class="col mb-4 mt-5 ml-5 pb-4 text-center align-items-center">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                    {% for pageImg in images %}
                        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active" data-bs-interval="10000">
                                <img src="{{ asset('build/images/'~ pageImg.title) }}" style="max-width: 400px" alt="image mariage">
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
            </div>
        </div>
    </div>
</div>
</section5>
{% endblock %}
