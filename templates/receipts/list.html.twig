{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <section class="container-fluid">
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="text-center mt-3 pb-3 ">
                <img class="imageLogoConvivial" src="{{ asset('build/images/logohorizontal2.webp') }}" alt="logo convivial">
            </div>
        </div>
    </div>
</section>
<section class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-4 mt-5 pb-4 text-center">
            <p class="listrecipePagetxtSection2">Les recettes que </br> vous propose </br> Convivial Event</p>
        </div>
    </div>
</section>
<section class="container">
    <div class="contenantSection4">
                <img class="imgHomeFixeS4" src="{{ asset('/build/images/boulPizz.0648ce00.webp') | imagine_filter('my_thumb') }}" alt="photo image home fixe">
            </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-4 mt-5 pb-4 text-center">
            <div class="contenantSection4">
                <p class="txtSection3List"><span class="span1ListS3">Une sélection de recettes</br>à faire chez vous oû</br>à partager avec vos amis !!!</span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 mx-auto">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.type) }}
                {{ form_widget(form.type) }}
                <div>
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.difficulty) }}
                {{ form_widget(form.difficulty) }}
                <div>
                    {{ form_errors(form.difficulty) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</section>
</section>
<section class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                {% for res in recipes %}
                <card>
                    {# <img class="card-img-top" src="{{ asset('build/images/' ~ res.image | imagine_filter('my_thumb')) }}" alt="photo recettes"> #}
                    <div class="card-body">
                        <P class="card-title"><a href="{{ path('receipts_detail', {slug:res.slug}) }}" src="recipe image">{{ res.slug }}</a></P>
                    </div>
                    <div class="card-footer">
                        <p class="textSection5">{{ res.title}}</p>
                    </div>
                </card>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block javascript %}
    {{ parent() }}

<script>
    $(document).ready(function() {
        $('select').formSelect();
    });
</script>
{% endblock %}
