                data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</section>
<section class="container">
    <div class="row" id="bgGrey">
        <div class="contenantSection7">
            <img class="imgHomeFixeS7" 
