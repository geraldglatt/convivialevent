                            <h5 class="carousel-size" id="carouselSizeS6Bis">Les Beauchots</h5>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="6000" id="carouselItemS6Bis">
                        <img class="img rounded-4 hover-shadow w-75" 
                        src="{{ asset('build/images/Chateau-Montabert.webp') | imagine_filter('my_thumb_scale') }}" 
